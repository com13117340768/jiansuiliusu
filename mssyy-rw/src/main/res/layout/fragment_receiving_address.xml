<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <!-- <android.support.v7.widget.LinearLayoutCompat
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginRight="15dp"
         android:layout_marginLeft="15dp"
         android:orientation="vertical"
         >-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/app_background" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="收货人:"
            android:textSize="13sp" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/newly_Addressee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="7"
            android:background="@null"
            android:gravity="top"
            android:imeOptions="actionNext"
            android:maxLength="16"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

    </android.support.v7.widget.LinearLayoutCompat>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="手机号码:"
            android:textSize="13sp" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/newly_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="7"
            android:background="@null"
            android:maxLength="11"
            android:gravity="top"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

    </android.support.v7.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="省、市、区:"
            android:textSize="13sp" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/newly_province"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="7"
            android:maxLength="20"
            android:background="@null"
            android:gravity="top"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

    </android.support.v7.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="详细地址:"
            android:textSize="13sp" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/newly_detailed_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="7"
            android:background="@null"
            android:maxLength="30"
            android:gravity="start|center_vertical"
            android:imeOptions="actionDone"
            android:hint="小区、楼牌号等,不少于5个字"
            android:maxLines="2"
            android:textCursorDrawable="@null"
            android:textSize="15sp"

            />

    </android.support.v7.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="设为默认地址"
            android:layout_marginLeft="15dp"
            android:textSize="13sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/newly_switch"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background" />


    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="保存"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:id="@+id/newly_commit_button"
        />

</android.support.v7.widget.LinearLayoutCompat>